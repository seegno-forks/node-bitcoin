{
  "name": "bitcoin",
  "version": "2.4.0",
  "description": "Communicate with bitcoind via JSON-RPC",
  "author": "Bill Casarin <bill@casarin.ca> (jb55.com)",
  "contributors": [
    "Rui Marinho <rui.marinho@seegno.com>",
    "Sean Lavine <sean@eternalrise.com>"
  ],
  "license": "MIT",
  "homepage": "https://github.com/freewil/node-bitcoin",
  "bugs": "https://github.com/freewil/node-bitcoin/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/freewil/node-bitcoin.git"
  },
  "main": "./dist/index.js",
  "keywords": [
    "bitcoin",
    "bitcoind",
    "request",
    "rest",
    "rpc"
  ],
  "options": {
    "mocha": "--compilers js:babel/register --recursive --require should test"
  },
  "scripts": {
    "build": "rm -rf dist/* && babel src/ --loose --out-dir dist/",
    "changelog": "github_changelog_generator --no-issues",
    "cover": "babel-node ./node_modules/.bin/isparta cover --report html _mocha -- $npm_package_options_mocha",
    "coveralls": "babel-node ./node_modules/.bin/isparta cover --report html _mocha --report lcovonly -- $npm_package_options_mocha && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "eslint src test && jscs src test",
    "prepublish": "npm test && npm run build",
    "test": "docker-compose run --rm app",
    "testonly": "mocha $npm_package_options_mocha"
  },
  "dependencies": {
    "bluebird": "^2.9.13",
    "lodash": "^3.3.1",
    "request": "^2.53.0",
    "standard-error": "^1.1.0"
  },
  "devDependencies": {
    "babel": "^5.6.14",
    "babel-eslint": "^4.0.0",
    "coveralls": "^2.11.3",
    "eslint": "^1.1.0",
    "eslint-plugin-babel": "^2.1.0",
    "isparta": "^3.0.3",
    "jscs": "^2.1.0",
    "mocha": "^2.2.5",
    "nock": "^2.10.0",
    "should": "^7.0.2"
  },
  "engines": {
    "node": ">= 0.10.0"
  }
}
